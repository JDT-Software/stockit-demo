<MudDialog CloseButton="true">
    <DialogContent>
        <MudText Typo="Typo.h6">@Title</MudText>
        <MudText Typo="Typo.body1" Class="mt-4">@Message</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Variant="Variant.Text">@CancelText</MudButton>
        <MudButton OnClick="Confirm" Color="Color.Primary" Variant="Variant.Filled">@ConfirmText</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter] 
    public string Title { get; set; } = "Confirm";

    [Parameter] 
    public string Message { get; set; } = string.Empty;

    [Parameter]
    public string ConfirmText { get; set; } = "Confirm";

    [Parameter]
    public string CancelText { get; set; } = "Cancel";

    [Parameter]
    public Action? OnConfirm { get; set; }

    [Parameter]
    public Action? OnCancel { get; set; }

    private void Cancel()
    {
        OnCancel?.Invoke();
    }
    
    private void Confirm()
    {
        OnConfirm?.Invoke();
    }
}